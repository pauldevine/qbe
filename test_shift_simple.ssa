# Simple shift test - multiply by 16
export function w $mul16(w %n) {
@start
	%result =w shl %n, 4
	ret %result
}

# Simple shift test - divide by 8
export function w $div8(w %n) {
@start
	%result =w sar %n, 3
	ret %result
}

# Variable shift
export function w $shift_left(w %val, w %count) {
@start
	%result =w shl %val, %count
	ret %result
}

# All three shift types
export function w $all_shifts() {
@start
	%a =w copy 100
	%b =w shl %a, 2     # 100 << 2 = 400
	%c =w shr %a, 1     # 100 >> 1 = 50 (logical)
	%d =w sar %a, 1     # 100 >> 1 = 50 (arithmetic)
	%tmp =w add %b, %c
	%result =w add %tmp, %d
	ret %result
}
